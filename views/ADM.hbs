    <link rel="shortcut icon" href="/public/css,js/img/logo-fs-png.png" type="image/x-icon">
    <link rel="stylesheet" href="/public/css,js/assets/balconista1.css">
    <title>PARTE ADMINISTRATIVA</title>
</head>
<body>
    <!-- PARTE DO CONTAINER GERAL -->
     <div class="container-list">
        <nav class="menu-lateral expanded">
            <div class="btn-expandir" id="btn-expandir">
                <i class="bi bi-list"></i> <!-- Ícone do botão de expandir -->
            </div>
            <ul>
                <li class="item-menu active" id="Dashboard">
                    <a href="#">
                        <span class="icon"><i class="bi bi-columns-gap"></i></span>
                        <span class="txt-link">Dashboard</span>
                    </a>
                </li>
                <li class="item-menu " id="Remover">
                    <a href="#">
                        <span class="icon"><i class="bi bi-trash-fill"></i></span>
                        <span class="txt-link">Remover</span>
                    </a>
                </li>
                <li class="item-menu" id="Adicionar">
                    <a href="#">
                        <span class="icon"><i class="bi bi-plus-circle"></i></span>
                        <span class="txt-link">Adicionar</span>
                    </a>
                </li>
            </ul>
        </nav>  
        <a href="/views/login.hbs" target="_blank"><button class="btn-sair">Sair</button></a>  
     </div>
     <!-- PARTE DO CONTAINER LISTA DE PRATOS -->
      <div class="container-pratos-list">
        <div class="radio-inputs">
            <label class="radio a">
                <input type="radio" id="a" name="radio" class="radio-button" checked>
                <span class="name">Pendentes</span>
            </label>
            <label class="radio b">
                <input type="radio" name="radio" class="radio-button">
                <span class="name">Em-processo</span>
            </label>
            <label class="radio c">
                <input type="radio" name="radio" class="radio-button">
                <span class="name">Completos</span>
            </label>
        </div>
        
    <div class="parte-info-main">
        <div class="perfil">
            <img src="/public/css,js/img/IMG-Instrutor.png" class="img-perfil" alt="">
        </div>
        <div class="h4-saudacao">
            <h4 class="h4-parte-conta">Seja Bem-vindo(a)</h4>
        </div>
        <br>
        <div class="beneficio">
            <p class="p-parte-conta">
                Acompanhe seus pedidos em um clique!!
            </p>
        </div>
    </div>
    <h1 class="list-pedidos">Lista De Pedidos</h1>
    <div class="div-pedidos">
        <div class="container" id="pendentes">
            <div class="pedidos" id="click">
                <h1 class="h1-blaconista h1">Método pagamento: Pix</h1>
                <p class="p-horas">00:00PM</p>
                <p class="p-mesas">Mesa: M1</p>
                <p class="p-qtd">Quantidade: 3</p>
                <p class="p-preco-total">R$:00,00</p>
                <button class="bnt-aceitar">
                    <div class="texto-bnt">
                    Aceitar
                </div>
                </button>
            </div>
          
    </div>
    <div class="div-pedidos2">
        <div class="container" id="processo">
        </div>
    </div>
    <div class="div-pedidos3">
        <div class="container" id="completos">
        </div>
    </div>
    <div class="scrollbar">
        <div class="scrollbar-thumb"></div>
    </div>
    </section>
      </div>
      </div>
      <!-- PARTE DE ADICIONAR PRATOS  -->
       <div class="container-adicionar-pratos">
        <div class="container-main">
            <h1 class="texto-main">Cadastrar Pratos</h1>
            <form action="" class="form" method="post" enctype="multipart/form-data">
                <!-- Nome do Prato -->
                <label for="nome-prato" class="nome-prato">Nome do Prato:</label>
                <input type="text" id="nome-prato" name="nome-prato" required>
        
                <!-- Categoria -->
                <label for="categoria" class="categoria">Categoria:</label>
                <select id="categoria" name="categoria" required>
                    <option value="promocoes">Principal</option>
                    <option value="bebidas">Bebidas</option>
                    <option value="doces">Doces</option>
                    <option value="favorito">Favorito</option>
                </select>
        
                <!-- Preço -->
                <label for="preco" class="preco">Preço:</label>
                <input type="number" id="preco" name="preco" step="0.01" min="0" required>
        
                <!-- Foto -->
                <label for="foto" class="foto">Foto do Prato:</label>
                <input type="file" id="foto" name="foto" accept="image/*" required>
        
                <!-- Botão de Envio -->
                <button type="submit">Cadastrar Prato</button>
            </form>
        </div>
       </div>

       <!-- PARTE DE REMOVER PRODUTOS -->
        <div class="container-remover-pratos">
       <div class="container-pratos">
        <h1 class="h1-main">Pratos Cadastrados</h1>
        <div class="pratos-list"></div>
    </div>
</div>
     <script src="/public/css,js/js/menu-lateral.js"></script>
