     <script src="/public/css,js/js/SairSistema.js"></script>
     <script src="/public/css,js/js/pratoscadastrados.js"></script>
     <script src="/public/css,js/js/balconsita.js"></script>
    <script src="/public/css,js/js/mostrarInputs.js"></script>
    <script src="/public/css,js/js/scroll-bar.js"></script>
</body>
</html>