datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cardapio {
  id        Int     @id @default(autoincrement())
  nome      String
  categoria String?
  preco     Int
  foto      String?
}

model Balconista {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
}

model Avaliacao {
  id        Int     @id @default(autoincrement())
  nome      String
  sobrenome String
  avaliacao String?
  estrelas  Int
}

model Pedido {
  id_pedido Int          @id @default(autoincrement())
  id_mesa   Int
  status    String       @default("pendente")
  dataed    DateTime     @default(now())
  itens     ItemPedido[]
}

model ItemPedido {
  id_item    Int    @id @default(autoincrement())
  id_pedido  Int
  nome       String
  preco      String
  quantidade Int
  pedido     Pedido @relation(fields: [id_pedido], references: [id_pedido])
}
