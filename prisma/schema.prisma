generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cardapio {
  id        Int     @id @default(autoincrement())
  nome      String
  categoria String?
  preco     Int
  foto      String?
}

model Pratos {
  id        Int    @id @default(autoincrement())
  prato     String
  descricao String
}

model Balconista {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
}

model Avaliacao {
  id        Int     @id @default(autoincrement())
  nome      String
  sobrenome String
  avaliacao String?
  estrelas  Int
}

model Pedido {
  id        Int     @id @default(autoincrement())
  prato     String
  descricao String?
}
